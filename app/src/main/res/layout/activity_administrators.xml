<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/administratorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Tools"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addNewImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_person_add_24" />

                <TextView
                    android:id="@+id/addNewTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Add New User"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/updateUserImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_personal_injury_24" />

                <TextView
                    android:id="@+id/updateUserTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Update User"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/viewUserImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_person_search_24" />

                <TextView
                    android:id="@+id/viewUserTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="View User"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deleteUserImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_person_add_disabled_24" />

                <TextView
                    android:id="@+id/deleteUserTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Delete User"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sendSMSImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_inbox_24" />

                <TextView
                    android:id="@+id/sendSMSTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Send SMS"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sendEmailImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_email_24" />

                <TextView
                    android:id="@+id/sendEmailTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Send Email"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/makeCallImageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_person_add_disabled_24" />

                <TextView
                    android:id="@+id/makeCallTextView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Make Call"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>